            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/docDescEmailLabel" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>